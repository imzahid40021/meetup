<%= form_with(model: group, local: true) do |form| %>
  <div class="form-group mt-3">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control mt-3", placeholder: "Enter group name" %>
  </div>
  <div class="form-group mt-3">
    <%= form.submit group.new_record? ? "Create Group" : "Update Group", class: "btn btn-primary" %>
  </div>
<% end %>