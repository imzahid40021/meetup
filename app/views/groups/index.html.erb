<div class="container mt-5">
    <%= link_to 'Home', root_path, class: 'btn btn-sm btn-primary'%>
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <h2>Groups</h2>
    </div>
  </div>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Organizers</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id%></td>
          <td><%= link_to group.name, group_path(group) %></td>
          <td>
            <%= group.users.organizers_in_group(group.id).pluck(:first_name).join(', ') %>
          </td>
          <td class="d-flex gap-2">
            <a href="<%= edit_group_path(group) %>" class="btn btn-sm btn-primary">Edit</a>
            <%= button_to 'Delete', group_path(group), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
    <a href="<%= new_group_path %>" class="btn btn-sm btn-primary">New Group</a>
</div>
